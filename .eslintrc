{
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "requireConfigFile": false
    },
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "airbnb-base",
    "rules": {
        "semi": [
            4,
            "never"
        ],
        "arrow-body-style": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "never"
        ], //該規則強制使用對象和數組文字中的逗號
        "no-console": 0 //關掉console.log()錯誤
    }
}
